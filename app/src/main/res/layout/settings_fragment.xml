<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings_Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/text_setting_fullname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Lengkap"
            android:ems="10"
            android:layout_marginTop="5dp"/>
        <android.support.design.widget.TextInputEditText
            android:id="@+id/text_setting_job"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="pekerjaan"
            android:ems="10"
            android:layout_marginTop="5dp"/>
        <android.support.design.widget.TextInputEditText
            android:id="@+id/text_setting_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="username"
            android:ems="10"
            android:layout_marginTop="5dp"/>
        <android.support.design.widget.TextInputEditText
            android:id="@+id/text_setting_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="password"
            android:inputType="textPassword"
            android:ems="10"
            android:layout_marginTop="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18sp"
                android:text="Reset Data Transsaksi"/>
            <CheckBox
                android:id="@+id/check_reset_transaksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18sp"
                android:text="init saldo"/>
            <CheckBox
                android:id="@+id/check_init_saldo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18sp"
                android:text="Login as admon"/>
            <CheckBox
                android:id="@+id/check_admin_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:id="@+id/text_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="logout"
            android:ems="10"
            android:textSize="18sp"
            android:textColor="@android:color/holo_orange_dark"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:orientation="vertical">
            <Button
                android:id="@+id/button_save_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="simpan"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/colorPrimary"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>